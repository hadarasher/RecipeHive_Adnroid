<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_honey2"
    android:orientation="vertical">


    <TextView
        android:id="@+id/helloTtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:text="Hello, " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/uploadRecipeBtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/menu_btn_shape"
            android:drawableBottom="@drawable/upload"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/upload_Recipe" />

        <Button
            android:id="@+id/addRecipeBtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/brown"
            android:drawableBottom="@drawable/todolist"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/add_recipe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addIngredientsBtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/menu_btn_shape"
            android:drawableBottom="@drawable/plus"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/add_ingredients" />

        <Button
            android:id="@+id/addFavBtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/menu_btn_shape"
            android:drawableBottom="@drawable/star"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/save_favorites" />
    </LinearLayout>

    <Button
        android:id="@+id/allRecipesBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@drawable/menu_btn_shape"
        android:drawableEnd="@drawable/arrow"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="25sp"
        android:text="To All Recipes" />
</LinearLayout>