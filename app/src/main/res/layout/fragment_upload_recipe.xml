<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.UploadRecipeFragment"
    android:padding="15dp"
    android:background="@color/light_yellow">

    <TextView
        android:id="@+id/AddRecipeTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:text="Add Recipe via Image"
        android:textColor="@color/dark_brown"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipetNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:gravity="right|center_vertical"
            android:textSize="18sp"
            android:textColor="@color/dark_brown"
            android:text="Recipe name: " />

        <EditText
            android:id="@+id/recipeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:ems="10"
            android:hint="Enter name for the recipe"
            android:inputType="text"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/light_honey" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/uploadFromGalleryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_btn_shape"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:text="upload from gallery" />

    <android.widget.Button
        android:id="@+id/pictureWithCameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/menu_btn_shape"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:text="Picture a Recipe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeTypeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/dark_brown"
            android:text="Recipe Type: " />

        <Spinner
            android:id="@+id/recipeTypeSpinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/drink" />

    <android.widget.Button
        android:id="@+id/saveRecipeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/menu_btn_shape"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:text="Save Recipe" />

</LinearLayout>